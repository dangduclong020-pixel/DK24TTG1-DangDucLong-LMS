<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Khoa CNTT - LMS</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        :root {
            --primary-color: #006d75; /* Màu Teal/Xanh cổ vịt - Đặc trưng cho cấp Khoa để khác Admin tổng */
            --primary-light: #e6fffb;
            --bg-color: #f5f5f5;
            --sidebar-width: 260px;
            --text-color: #262626;
            --text-muted: #8c8c8c;
            --card-shadow: 0 2px 8px rgba(0,0,0,0.06);
            --border-radius: 8px;
        }

        * { margin: 0; padding: 0; box-sizing: border-box; font-family: 'Inter', sans-serif; }
        body { background-color: var(--bg-color); display: flex; min-height: 100vh; }

        /* --- SIDEBAR --- */
        .sidebar {
            width: var(--sidebar-width); background: #fff; border-right: 1px solid #f0f0f0;
            display: flex; flex-direction: column; position: fixed; height: 100%; top: 0; left: 0;
        }
        .dept-logo {
            height: 70px; display: flex; align-items: center; padding: 0 20px;
            border-bottom: 1px solid #f0f0f0; gap: 10px;
        }
        .dept-logo i { font-size: 24px; color: var(--primary-color); }
        .dept-info h3 { font-size: 14px; font-weight: 700; color: #333; }
        .dept-info p { font-size: 11px; color: #888; text-transform: uppercase; letter-spacing: 0.5px; }

        .menu { list-style: none; padding: 15px 10px; }
        .menu-title { font-size: 11px; text-transform: uppercase; color: #999; margin: 15px 15px 5px; font-weight: 600; }
        .menu-item {
            padding: 10px 15px; margin-bottom: 4px; display: flex; align-items: center;
            color: #555; text-decoration: none; border-radius: 6px; transition: 0.2s; font-size: 14px;
        }
        .menu-item:hover { background-color: #f5f5f5; color: var(--primary-color); }
        .menu-item.active { background-color: var(--primary-light); color: var(--primary-color); font-weight: 500; }
        .menu-item i { width: 24px; font-size: 16px; }

        /* --- MAIN CONTENT --- */
        .main-content { margin-left: var(--sidebar-width); flex: 1; padding: 24px; }

        /* Header specific for Dept */
        .top-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 24px; }
        .welcome-text h1 { font-size: 22px; font-weight: 600; color: #1f1f1f; }
        .welcome-text p { font-size: 14px; color: #8c8c8c; margin-top: 4px; }
        
        .current-term {
            background: #fff; padding: 8px 16px; border-radius: 30px; border: 1px solid #d9d9d9;
            font-size: 13px; font-weight: 500; color: #555; display: flex; align-items: center; gap: 8px;
        }

        /* Stats Grid */
        .stats-grid { display: grid; grid-template-columns: repeat(4, 1fr); gap: 20px; margin-bottom: 24px; }
        .stat-card {
            background: #fff; padding: 20px; border-radius: var(--border-radius);
            box-shadow: var(--card-shadow); border-left: 4px solid var(--primary-color);
        }
        .stat-card h4 { font-size: 13px; color: #8c8c8c; font-weight: 500; margin-bottom: 8px; }
        .stat-value { font-size: 26px; font-weight: 700; color: #262626; }
        .stat-desc { font-size: 12px; margin-top: 5px; color: #52c41a; display: flex; align-items: center; gap: 4px; }
        
        /* Quick Actions & Urgent Tasks */
        .mid-section { display: grid; grid-template-columns: 2fr 1fr; gap: 20px; margin-bottom: 24px; }
        
        /* Table Section */
        .section-card { background: #fff; border-radius: var(--border-radius); box-shadow: var(--card-shadow); padding: 20px; height: 100%; }
        .card-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px; }
        .card-title { font-size: 16px; font-weight: 600; color: #262626; }
        
        /* Table Styles */
        table { width: 100%; border-collapse: collapse; }
        th { text-align: left; padding: 12px; background: #fafafa; border-bottom: 1px solid #eee; font-size: 13px; color: #666; }
        td { padding: 12px; border-bottom: 1px solid #f5f5f5; font-size: 13px; color: #333; }
        
        /* Badges */
        .status-badge { padding: 4px 10px; border-radius: 12px; font-size: 11px; font-weight: 600; }
        .bg-progress { background: #e6f7ff; color: #1890ff; }
        .bg-pending { background: #fff7e6; color: #fa8c16; }
        .bg-closed { background: #f5f5f5; color: #8c8c8c; }

        /* Alert Messages */
        .alert {
            padding: 12px 16px; margin-bottom: 20px; border-radius: 6px; display: flex; align-items: center; gap: 8px;
            border: none; position: relative;
        }
        .alert-success { background: #f6ffed; color: #389e0d; border-left: 4px solid #52c41a; }
        .alert-danger { background: #fff1f0; color: #cf1322; border-left: 4px solid #ff4d4f; }
        .btn-close {
            background: none; border: none; position: absolute; right: 12px; font-size: 18px;
            cursor: pointer; opacity: 0.7; color: inherit;
        }
        .btn-close:hover { opacity: 1; }

        /* Responsive */
        @@media (max-width: 768px) {
            .sidebar { transform: translateX(-100%); }
            .main-content { margin-left: 0; }
            .stats-grid { grid-template-columns: repeat(2, 1fr); }
        }

        /* Notification List */
        .noti-list { list-style: none; }
        .noti-item { display: flex; gap: 12px; padding-bottom: 15px; border-bottom: 1px solid #f0f0f0; margin-bottom: 15px; }
        .noti-item:last-child { border: none; margin: 0; padding: 0; }
        .noti-icon { width: 36px; height: 36px; background: #fff1f0; color: #ff4d4f; border-radius: 50%; display: flex; align-items: center; justify-content: center; flex-shrink: 0; }
        .noti-content h5 { font-size: 13px; margin-bottom: 2px; }
        .noti-content p { font-size: 12px; color: #8c8c8c; }
        .btn-action { padding: 4px 8px; font-size: 11px; border: 1px solid #d9d9d9; background: #fff; border-radius: 4px; cursor: pointer; margin-top: 5px; }

    </style>
</head>
<body>

    <aside class="sidebar">
        <div class="dept-logo">
            <i class="fa-solid fa-laptop-code"></i>
            <div class="dept-info">
                <h3>@(ViewBag.FacultyName ?? "KHOA CNTT")</h3>
                <p>Faculty Admin</p>
            </div>
        </div>

        <ul class="menu">
            <li class="menu-title">TỔNG QUAN</li>
            <a href="@Url.Action("Index", "FacultyAdmin")" class="menu-item" data-page="Index"><i class="fa-solid fa-chart-line"></i> Dashboard</a>
            
            <li class="menu-title">QUẢN LÝ ĐÀO TẠO</li>
            <a href="@Url.Action("CourseManagement", "FacultyAdmin")" class="menu-item" data-page="CourseManagement"><i class="fa-solid fa-book"></i> Quản lý Khóa học</a>
            <a href="@Url.Action("CreateCourse", "FacultyAdmin")" class="menu-item" data-page="CreateCourse"><i class="fa-solid fa-plus-circle"></i> Tạo Khóa học mới</a>
            
            <li class="menu-title">QUẢN LÝ NHÂN SỰ</li>
            <a href="@Url.Action("TeacherManagement", "FacultyAdmin")" class="menu-item" data-page="TeacherManagement"><i class="fa-solid fa-user-tie"></i> Quản lý Giảng viên</a>
            <a href="@Url.Action("StudentManagement", "FacultyAdmin")" class="menu-item" data-page="StudentManagement"><i class="fa-solid fa-users"></i> Quản lý Sinh viên</a>
            
            <li class="menu-title">BÁO CÁO & THỐNG KÊ</li>
            <a href="@Url.Action("Reports", "FacultyAdmin")" class="menu-item" data-page="Reports"><i class="fa-solid fa-chart-bar"></i> Báo cáo - Thống kê</a>
            
            <li class="menu-title">HỆ THỐNG</li>
            <a href="@Url.Action("Logout", "FacultyAdmin")" class="menu-item" data-page="Logout"><i class="fa-solid fa-sign-out-alt"></i> Đăng xuất</a>
        </ul>
    </aside>

    <main class="main-content">
        <!-- Alert Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @RenderBody()
    </main>

    <!-- Bootstrap JS for alert dismissal -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
    
    <script>
        // Set active menu item based on current page
        document.addEventListener('DOMContentLoaded', function() {
            const currentAction = '@ViewContext.RouteData.Values["Action"]';
            const menuItems = document.querySelectorAll('.menu-item');
            
            menuItems.forEach(item => {
                const page = item.getAttribute('data-page');
                if (page === currentAction) {
                    item.classList.add('active');
                } else {
                    item.classList.remove('active');
                }
            });
        });
        
        // Auto-hide alerts after 5 seconds
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                if (alert.classList.contains('show')) {
                    alert.classList.remove('show');
                    setTimeout(() => alert.remove(), 150);
                }
            });
        }, 5000);
    </script>
</body>
</html>