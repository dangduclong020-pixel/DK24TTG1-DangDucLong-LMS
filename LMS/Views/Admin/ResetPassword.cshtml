@model List<LMS.Models.User>

@{
    ViewData["Title"] = "Reset mật khẩu người dùng cấp cao";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        :root {
            --primary-color: #1890ff;
            --success-color: #52c41a;
            --warning-color: #faad14;
            --error-color: #ff4d4f;
            --bg-color: #f0f2f5;
            --text-color: #333;
            --text-muted: #8c8c8c;
            --border-color: #d9d9d9;
            --card-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.03);
        }

        .reset-container {
            background: #fff;
            border-radius: 8px;
            box-shadow: var(--card-shadow);
            padding: 24px;
        }

        .page-header {
            text-align: center;
            margin-bottom: 24px;
            padding-bottom: 16px;
            border-bottom: 1px solid var(--border-color);
        }

        .page-header h2 {
            color: var(--primary-color);
            margin-bottom: 8px;
        }

        .page-header p {
            color: var(--text-muted);
            font-size: 14px;
        }

        .search-box {
            position: relative;
            margin-bottom: 20px;
            max-width: 400px;
        }

        .search-box input {
            width: 100%;
            padding: 10px 10px 10px 36px;
            border: 1px solid var(--border-color);
            border-radius: 6px;
            outline: none;
            transition: border 0.3s;
        }

        .search-box input:focus {
            border-color: var(--primary-color);
        }

        .search-box i {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-muted);
        }

        .user-list {
            max-height: 600px;
            overflow-y: auto;
            border: 1px solid var(--border-color);
            border-radius: 6px;
        }

        .user-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 16px;
            border-bottom: 1px solid #f0f0f0;
            transition: background-color 0.3s;
        }

        .user-item:last-child {
            border-bottom: none;
        }

        .user-item:hover {
            background-color: #fafafa;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: var(--primary-color);
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            font-size: 16px;
        }

        .user-details h6 {
            margin: 0;
            color: var(--text-color);
            font-weight: 600;
        }

        .user-details p {
            margin: 0;
            font-size: 12px;
            color: var(--text-muted);
        }

        .role-badge {
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 12px;
            font-weight: 500;
            margin-top: 4px;
            display: inline-block;
        }

        .badge-admin {
            background: #fff2e8;
            color: #d46b08;
            border: 1px solid #ffbb96;
        }

        .badge-manager {
            background: #f9f0ff;
            color: #531dab;
            border: 1px solid #d3adf7;
        }

        .badge-teacher {
            background: #e6f7ff;
            color: #096dd9;
            border: 1px solid #91d5ff;
        }

        .reset-btn {
            background: var(--warning-color);
            color: #fff;
            border: none;
            padding: 8px 16px;
            border-radius: 4px;
            font-size: 12px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s;
        }

        .reset-btn:hover {
            background: #ffc53d;
            transform: translateY(-1px);
        }

        .reset-btn:disabled {
            background: #d9d9d9;
            color: #999;
            cursor: not-allowed;
            transform: none;
        }

        .alert {
            padding: 12px 16px;
            border-radius: 6px;
            margin-bottom: 20px;
            border-left: 4px solid;
        }

        .alert-success {
            background-color: #f6ffed;
            color: #389e0d;
            border-left-color: var(--success-color);
        }

        .alert-error {
            background-color: #fff1f0;
            color: #cf1322;
            border-left-color: var(--error-color);
        }

        .alert-info {
            background-color: #e6f7ff;
            color: #0050b3;
            border-left-color: var(--primary-color);
        }

        .empty-state {
            text-align: center;
            padding: 40px 20px;
            color: var(--text-muted);
        }

        .empty-state i {
            font-size: 48px;
            margin-bottom: 16px;
            color: #d9d9d9;
        }

        .stats-summary {
            background: #f9f9f9;
            padding: 16px;
            border-radius: 6px;
            margin-bottom: 20px;
        }

        .stats-summary h6 {
            margin: 0;
            color: var(--text-color);
            font-weight: 600;
        }

        .stats-summary p {
            margin: 0;
            font-size: 14px;
            color: var(--text-muted);
        }

        .btn-back {
            background: #f5f5f5;
            color: var(--text-color);
            border: 1px solid var(--border-color);
            padding: 10px 20px;
            border-radius: 6px;
            text-decoration: none;
            font-size: 14px;
            font-weight: 500;
            transition: background-color 0.3s;
        }

        .btn-back:hover {
            background: #e8e8e8;
            text-decoration: none;
            color: var(--text-color);
        }

        .actions-header {
            display: flex;
            justify-content: between;
            align-items: center;
            margin-bottom: 20px;
        }
    </style>
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0 text-dark">
                        <i class="fas fa-key text-warning"></i> Reset mật khẩu người dùng cấp cao
                    </h1>
                    <p class="mb-0 text-muted">Đặt lại mật khẩu về mặc định (123456) cho Admin, Admin Khoa và Giảng viên</p>
                </div>
                <a href="@Url.Action("UserManagement", "Admin")" class="btn-back">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
    </div>

    <div class="reset-container">
        <div class="page-header">
            <h2><i class="fas fa-lock-open"></i> Quản lý mật khẩu cấp cao</h2>
            <p>Chỉ có thể reset mật khẩu cho người dùng có vai trò Admin, Admin Khoa và Giảng viên</p>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-error">
                <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            </div>
        }

        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> <strong>Thông tin:</strong>
            Mật khẩu sau khi reset sẽ là <code>123456</code>. Người dùng nên đổi mật khẩu ngay khi đăng nhập lần đầu.
        </div>

        <!-- Statistics Summary -->
        <div class="stats-summary">
            <div class="row">
                <div class="col-md-3 text-center">
                    <h6>@Model.Count(u => u.RoleId == 1)</h6>
                    <p>Admin Tổng</p>
                </div>
                <div class="col-md-3 text-center">
                    <h6>@Model.Count(u => u.RoleId == 2)</h6>
                    <p>Admin Khoa</p>
                </div>
                <div class="col-md-3 text-center">
                    <h6>@Model.Count(u => u.RoleId == 3)</h6>
                    <p>Giảng viên</p>
                </div>
                <div class="col-md-3 text-center">
                    <h6>@Model.Count()</h6>
                    <p>Tổng cộng</p>
                </div>
            </div>
        </div>

        <!-- Search Box -->
        <div class="search-box">
            <i class="fas fa-search"></i>
            <input type="text" id="searchInput" placeholder="Tìm kiếm theo tên, mã số hoặc email...">
        </div>

        <!-- User List -->
        <div class="user-list" id="userList">
            @if (Model == null || !Model.Any())
            {
                <div class="empty-state">
                    <i class="fas fa-users"></i>
                    <h5>Không có người dùng nào</h5>
                    <p>Hiện tại chưa có người dùng cấp cao nào trong hệ thống</p>
                </div>
            }
            else
            {
                @foreach (var user in Model.OrderBy(u => u.RoleId).ThenBy(u => u.FullName))
                {
                    <div class="user-item" data-user-info="@user.FullName @user.MssvMgv @user.Email">
                        <div class="user-info">
                            <div class="user-avatar">
                                @user.FullName?.Substring(0, 1).ToUpper()
                            </div>
                            <div class="user-details">
                                <h6>@user.FullName</h6>
                                <p>@user.MssvMgv • @user.Email</p>
                                @switch (user.RoleId)
                                {
                                    case 1:
                                        <span class="role-badge badge-admin">Admin Tổng</span>
                                        break;
                                    case 2:
                                        <span class="role-badge badge-manager">Admin Khoa</span>
                                        break;
                                    case 3:
                                        <span class="role-badge badge-teacher">Giảng viên</span>
                                        break;
                                }
                                @if (user.Faculty != null)
                                {
                                    <span class="role-badge" style="background: #f0f0f0; color: #666; margin-left: 8px;">
                                        @user.Faculty.Name
                                    </span>
                                }
                            </div>
                        </div>
                        <div class="user-actions">
                            <form method="post" asp-action="ResetPasswordForUser" style="display: inline;">
                                <input type="hidden" name="userId" value="@user.UserId" />
                                <button type="button" class="reset-btn" onclick="confirmReset(this, '@user.FullName', '@user.MssvMgv')">
                                    <i class="fas fa-key"></i> Reset
                                </button>
                            </form>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Search functionality
        document.getElementById('searchInput').addEventListener('keyup', function() {
            let filter = this.value.toLowerCase();
            let userItems = document.querySelectorAll('.user-item');

            userItems.forEach(function(item) {
                let userInfo = item.getAttribute('data-user-info').toLowerCase();
                if (userInfo.includes(filter)) {
                    item.style.display = '';
                } else {
                    item.style.display = 'none';
                }
            });
        });

        // Confirm reset password
        function confirmReset(button, fullName, userCode) {
            if (confirm(`Bạn có chắc chắn muốn reset mật khẩu cho "${fullName}" (${userCode})?\n\nMật khẩu sẽ được đặt lại về: 123456`)) {
                // Disable button to prevent double-click
                button.disabled = true;
                button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Đang xử lý...';
                
                // Submit form
                button.closest('form').submit();
            }
        }

        // Auto-hide success/error messages after 5 seconds
        setTimeout(function() {
            const alerts = document.querySelectorAll('.alert-success, .alert-error');
            alerts.forEach(function(alert) {
                alert.style.transition = 'opacity 0.5s';
                alert.style.opacity = '0';
                setTimeout(function() {
                    alert.style.display = 'none';
                }, 500);
            });
        }, 5000);
    </script>
}