@model LMS.Models.Faculty

@{
    ViewData["Title"] = "Tạo khoa mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0 text-dark">
                        <i class="fas fa-plus"></i> Tạo khoa mới
                    </h1>
                    <p class="mb-0 text-muted">Thêm khoa mới vào hệ thống</p>
                </div>
                <a href="@Url.Action("FacultyManagement", "Admin")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
    </div>

    <!-- Form tạo khoa -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-success">Thông tin khoa</h6>
                </div>
                <div class="card-body">
                    <form asp-action="CreateFaculty" method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Name">Tên khoa <span class="text-danger">*</span></label>
                                    <input asp-for="Name" class="form-control" required 
                                           placeholder="VD: Khoa Công nghệ Thông tin">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Code">Mã khoa</label>
                                    <input asp-for="Code" class="form-control" 
                                           placeholder="VD: CNTT">
                                    <span asp-validation-for="Code" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="imageFile">Hình ảnh khoa</label>
                                    <input type="file" name="imageFile" id="imageFile" class="form-control-file" 
                                           accept="image/*" onchange="previewImage(this)">
                                    <small class="form-text text-muted">Chỉ chấp nhận file .jpg, .jpeg, .png, .gif (tối đa 5MB)</small>
                                    
                                    <!-- Preview area -->
                                    <div class="mt-3" id="imagePreview" style="display:none;">
                                        <img id="preview" src="" alt="Preview" style="max-width: 200px; max-height: 150px;" class="img-thumbnail">
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Description">Mô tả khoa</label>
                                    <textarea asp-for="Description" class="form-control" rows="4" 
                                              placeholder="Nhập mô tả về khoa, chức năng, nhiệm vụ..."></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>


                        </div>

                        <!-- Preview -->
                        <div class="alert alert-info">
                            <h6><i class="fas fa-info-circle"></i> Thông tin sẽ được tạo:</h6>
                            <ul class="mb-0">
                                <li>Trạng thái: Hoạt động</li>
                                <li>Ngày tạo: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</li>
                                <li>Có thể tạo bộ môn sau khi khoa được tạo</li>
                                <li>Có thể gán giảng viên và sinh viên vào khoa</li>
                            </ul>
                        </div>

                        <!-- Nút thao tác -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-success btn-lg mr-3">
                                <i class="fas fa-save"></i> Tạo khoa
                            </button>
                            <a href="@Url.Action("FacultyManagement", "Admin")" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times"></i> Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Preview image function
    function previewImage(input) {
        var preview = document.getElementById('preview');
        var previewDiv = document.getElementById('imagePreview');
        
        if (input.files && input.files[0]) {
            var file = input.files[0];
            
            // Validate file type
            var allowedTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/gif'];
            if (!allowedTypes.includes(file.type)) {
                alert('Chỉ chấp nhận file hình ảnh (.jpg, .jpeg, .png, .gif)');
                input.value = '';
                previewDiv.style.display = 'none';
                return;
            }
            
            // Validate file size (5MB)
            if (file.size > 5 * 1024 * 1024) {
                alert('Kích thước file không được vượt quá 5MB');
                input.value = '';
                previewDiv.style.display = 'none';
                return;
            }
            
            var reader = new FileReader();
            reader.onload = function(e) {
                preview.src = e.target.result;
                previewDiv.style.display = 'block';
            }
            reader.readAsDataURL(file);
        } else {
            previewDiv.style.display = 'none';
        }
    }

    // Auto generate code from name
    document.querySelector('[name="Name"]').addEventListener('input', function() {
        var name = this.value;
        var codeField = document.querySelector('[name="Code"]');
        
        if (name && !codeField.value) {
            // Extract initials from Vietnamese faculty names
            var words = name.split(' ');
            var code = '';
            
            words.forEach(function(word) {
                if (word.length > 0) {
                    code += word.charAt(0).toUpperCase();
                }
            });
            
            codeField.value = code.substring(0, 10); // Limit to 10 characters
        }
    });

    // Form validation
    document.querySelector('form').addEventListener('submit', function(e) {
        var name = document.querySelector('[name="Name"]').value.trim();
        
        if (name.length < 5) {
            e.preventDefault();
            alert('Tên khoa phải có ít nhất 5 ký tự!');
            return false;
        }
    });
</script>

<style>
    .form-group label {
        font-weight: 600;
        color: #495057;
    }

    .text-danger {
        font-weight: bold;
    }

    .card {
        border: none;
        border-radius: 10px;
    }

    .btn-lg {
        padding: 10px 30px;
        font-size: 16px;
    }

    .alert-info {
        border-left: 4px solid #17a2b8;
    }

    .form-control:focus {
        border-color: #28a745;
        box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
    }

    textarea.form-control {
        resize: vertical;
    }
</style>