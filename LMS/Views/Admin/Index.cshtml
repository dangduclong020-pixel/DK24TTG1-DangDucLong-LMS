@{
    ViewData["Title"] = "Dashboard Admin Tổng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        :root {
            --primary-color: #1890ff; /* Màu xanh chủ đạo */
            --bg-color: #f0f2f5;
            --sidebar-width: 260px;
            --text-color: #333;
            --text-muted: #8c8c8c;
            --card-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.03);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', sans-serif;
        }

        body {
            background-color: var(--bg-color);
            min-height: 100vh;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.3rem;
        }

        .sidebar-new {
            min-height: calc(100vh - 56px);
            box-shadow: 2px 0 4px rgba(0,0,0,0.1);
            background-color: #f8f9fa;
        }
        
        .sidebar-new .nav-link {
            color: #6c757d;
            padding: 12px 15px;
            border-radius: 0;
            transition: all 0.2s;
            text-decoration: none;
        }
        
        .sidebar-new .nav-link:hover,
        .sidebar-new .nav-link.active {
            background-color: #e9ecef;
            color: #007bff;
        }
        
        .sidebar-new .nav-link.active {
            border-left: 3px solid #007bff;
        }
        
        .main-content-new {
            background-color: white;
            min-height: calc(100vh - 56px);
        }

        /* Stats Grid */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
            margin-bottom: 20px;
        }

        .card {
            background: #fff;
            padding: 24px;
            border-radius: 8px;
            box-shadow: var(--card-shadow);
            text-align: center;
        }

        .card-number {
            font-size: 32px;
            font-weight: 600;
            color: var(--primary-color);
            margin-bottom: 8px;
        }

        .card-label {
            font-size: 14px;
            color: var(--text-muted);
        }

        /* Charts Layout */
        .charts-row-1 {
            display: grid;
            grid-template-columns: 2fr 1fr; /* 2 phần cho Line Chart, 1 phần cho Pie Chart */
            gap: 20px;
            margin-bottom: 20px;
        }

        .charts-row-2 {
            display: grid;
            grid-template-columns: 1fr;
            gap: 20px;
            margin-bottom: 20px;
        }

        .chart-container {
            background: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: var(--card-shadow);
            position: relative;
        }

        .chart-title {
            font-size: 16px;
            font-weight: 600;
            margin-bottom: 20px;
            color: #333;
        }

        /* Custom Legend for Pie Chart mimicking the image */
        .pie-legend-container {
            display: flex;
            justify-content: center;
            align-items: center;
        }
        
        /* Responsive */
        @@media (max-width: 1024px) {
            .stats-grid { grid-template-columns: repeat(2, 1fr); }
            .charts-row-1 { grid-template-columns: 1fr; }
        }
    </style>
}

<!-- Header cho Admin Tổng -->
<div class="container-fluid mb-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0 text-dark">
                        <i class="fas fa-crown text-warning"></i> Dashboard Admin Tổng
                    </h1>
                    <p class="mb-0 text-muted">Quản trị toàn bộ hệ thống LMS - Cấu hình, thống kê và giám sát tổng quan</p>
                </div>
                <div class="d-flex gap-2">
                    <div class="badge bg-success fs-6 px-3 py-2">
                        <i class="fas fa-check-circle"></i> Hệ thống hoạt động bình thường
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

        <div class="stats-grid">
            <div class="card">
                <div class="card-number">@ViewBag.TotalFaculties</div>
                <div class="card-label">
                    <i class="fas fa-university text-info"></i> Tổng số Khoa
                </div>
            </div>
            <div class="card">
                <div class="card-number">@ViewBag.TotalDepartments</div>
                <div class="card-label">
                    <i class="fas fa-building text-success"></i> Tổng số Bộ môn
                </div>
            </div>
            <div class="card">
                <div class="card-number">@ViewBag.TotalHighLevelUsers</div>
                <div class="card-label">
                    <i class="fas fa-user-shield text-warning"></i> User cấp cao (Admin + GV)
                </div>
            </div>
            <div class="card">
                <div class="card-number">@ViewBag.TotalTeachers</div>
                <div class="card-label">
                    <i class="fas fa-chalkboard-teacher text-primary"></i> Tổng Giảng viên
                </div>
            </div>
            <div class="card">
                <div class="card-number">@ViewBag.TotalCourses</div>
                <div class="card-label">
                    <i class="fas fa-book-open text-danger"></i> Khóa học toàn hệ thống
                </div>
            </div>
            <div class="card">
                <div class="card-number">@ViewBag.TotalStudents</div>
                <div class="card-label">
                    <i class="fas fa-users text-secondary"></i> Tổng Sinh viên (tham khảo)
                </div>
            </div>
            </div>

        <div class="charts-row-1">
            <div class="chart-container">
                <h3 class="chart-title">
                    <i class="fas fa-chart-line text-primary"></i> Xu hướng người dùng cấp cao theo tháng
                </h3>
                <canvas id="lineChart" height="150"></canvas>
            </div>
            <div class="chart-container">
                <h3 class="chart-title">
                    <i class="fas fa-chart-pie text-success"></i> Phân bố vai trò trong hệ thống
                </h3>
                <div class="pie-legend-container">
                    <canvas id="pieChart" height="200"></canvas>
                </div>
            </div>
        </div>

        <div class="charts-row-2">
            <div class="chart-container">
                <h3 class="chart-title">
                    <i class="fas fa-chart-bar text-info"></i> Thống kê hoạt động khóa học theo các Khoa
                </h3>
                <canvas id="barChart" height="100"></canvas>
            </div>
        </div>

@section Scripts {
    <script>
        // Cấu hình chung cho Chart.js
        Chart.defaults.font.family = "'Inter', sans-serif";
        Chart.defaults.color = '#8c8c8c';

        // 1. Line Chart: Thống kê người dùng
        const monthlyData = @Html.Raw(Json.Serialize(ViewBag.MonthlyStats ?? new List<object>()));
        const labels = monthlyData.map(item => item.month || '');
        const userData = monthlyData.map(item => item.users || 0);
        
        const ctxLine = document.getElementById('lineChart').getContext('2d');
        new Chart(ctxLine, {
            type: 'line',
            data: {
                labels: labels.length > 0 ? labels : ['01/2024', '02/2024', '03/2024', '04/2024', '05/2024', '06/2024', '07/2024'],
                datasets: [
                    {
                        label: 'Người dùng mới',
                        data: userData.length > 0 ? userData : [5, 8, 12, 15, 10, 18, 20],
                        borderColor: '#1890ff',
                        backgroundColor: 'rgba(24, 144, 255, 0.1)',
                        borderWidth: 2,
                        tension: 0.4,
                        pointRadius: 3,
                        pointBackgroundColor: '#fff',
                        pointBorderColor: '#1890ff',
                        fill: true
                    }
                ]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { display: false }, // Ẩn chú thích để giống hình
                    tooltip: {
                        mode: 'index',
                        intersect: false,
                        backgroundColor: '#fff',
                        titleColor: '#333',
                        bodyColor: '#666',
                        borderColor: '#e8e8e8',
                        borderWidth: 1
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: { borderDash: [2, 2] }
                    },
                    x: {
                        grid: { display: false }
                    }
                }
            }
        });

        // 2. Pie Chart: Thống kê loại người dùng
        const ctxPie = document.getElementById('pieChart').getContext('2d');
        new Chart(ctxPie, {
            type: 'doughnut', // Dùng doughnut để giống hình hơn pie
            data: {
                labels: ['Sinh viên', 'Giảng viên', 'Quản lý', 'Admin'],
                datasets: [{
                    data: [@ViewBag.TotalStudents, @ViewBag.TotalTeachers, 2, 1], // Dữ liệu thực từ database
                    backgroundColor: [
                        '#2eb85c', // Xanh lá - Sinh viên
                        '#f9b115', // Vàng cam - Giảng viên  
                        '#1890ff', // Xanh dương - Quản lý
                        '#e55353'  // Đỏ - Admin
                    ],
                    borderWidth: 0,
                    hoverOffset: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'right',
                        labels: {
                            usePointStyle: true,
                            pointStyle: 'rectRounded',
                            padding: 20,
                            font: { size: 12 }
                        }
                    }
                },
                cutout: '0%' // Đặt lại thành Pie chart (0%) hoặc Doughnut (50%+)
            }
        });

        // 3. Bar Chart: Số chỉ tiêu đào tạo theo tháng
        const ctxBar = document.getElementById('barChart').getContext('2d');
        new Chart(ctxBar, {
            type: 'bar',
            data: {
                labels: labels.length > 0 ? labels : ['Tháng 1', 'Tháng 2', 'Tháng 3', 'Tháng 4', 'Tháng 5', 'Tháng 6', 'Tháng 7', 'Tháng 8', 'Tháng 9', 'Tháng 10', 'Tháng 11'],
                datasets: [{
                    label: 'Số lượng người dùng',
                    data: userData.length > 0 ? userData.map(x => x * 10) : [100, 150, 230, 120, 230, 330, 310, 240, 90, 140, 150],
                    backgroundColor: '#1890ff',
                    borderRadius: 4,
                    barPercentage: 0.3
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 350,
                        grid: { borderDash: [2, 2] }
                    },
                    x: {
                        grid: { display: false }
                    }
                }
            }
        });
    </script>
}